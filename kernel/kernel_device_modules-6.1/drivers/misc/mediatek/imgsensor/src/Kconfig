config IMGSENSOR_CUSTOM_CAMERA
	bool "Use custom camera set"
	help
	  Use custom camera set

config IMGSENSOR_SYSFS
	bool "Imgsensor sysfs"
	default n
	help
	  If CONFIG_IMGSENSOR_SYSFS is y, then "Samsung sysfs" is built.
	  This is for camera bringup without sysfs implementation.
	  Set this config to n, while bringup the camera.

config CAMERA_ADAPTIVE_MIPI
	bool "camera adaptive mipi"
	default n
	help
	  If CAMERA_ADAPTIVE_MIPI is y, then "Samsung adaptive mipi" is built.
	  This is for camera bringup without adaptive-mipi implementation.
	  Set this config to n, while bringup the camera.

if IMGSENSOR_CUSTOM_CAMERA
choice IMGSENSOR_CAMERA_SET_CHOICE
	prompt "Choose the proper camera set"
config CAMERA_STX_V10P
	bool "Camera stx _v10p"
	help
	  For STX_V10P camera set
config CAMERA_STX_V10U
	bool "Camera stx _v10u"
	help
	  For STX_V10U camera set
endchoice

config CAMERA_SAMSUNG_MODEL_NAME
	string "Camera samsung model name"
	help
	  Current model name.
endif
